<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--无动画主题-->
    <style name="AppThemeNoAnimation" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
    </style>


    <!--全屏无动画主题-->
    <style name="FullScreenTheme" parent="AppThemeNoAnimation">
        <item name="android:windowAnimationStyle">@style/noAnimation</item>

    </style>

    <!--没有跳转动画效果-->
    <style name="noAnimation">

        <item name="android:activityOpenEnterAnimation">@null</item>

        <item name="android:activityOpenExitAnimation">@null</item>

        <item name="android:activityCloseEnterAnimation">@null</item>

        <item name="android:activityCloseExitAnimation">@null</item>

        <item name="android:taskOpenEnterAnimation">@null</item>

        <item name="android:taskOpenExitAnimation">@null</item>

        <item name="android:taskCloseEnterAnimation">@null</item>

        <item name="android:taskCloseExitAnimation">@null</item>

        <item name="android:taskToFrontEnterAnimation">@null</item>

        <item name="android:taskToFrontExitAnimation">@null</item>

        <item name="android:taskToBackEnterAnimation">@null</item>

        <item name="android:taskToBackExitAnimation">@null</item>
    </style>


    <style name="BottomTabStyle">
        <item name="android:textColor">@drawable/nav_bottom_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="tabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tabLayoutTextStyle2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="toolbarTextStyle">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="starStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/drawable_star</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <style name="smallTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bottom_text</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
